# Claude API Configuration
ANTHROPIC_API_KEY=your_api_key_here

# Model Selection (optional - defaults to claude-3-5-sonnet-20241022)
# Options: claude-3-haiku-20240307, claude-3-5-sonnet-20241022, claude-3-opus-20240229
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Agent Configuration
MAX_TURNS=20
MAX_THINKING_TOKENS=10000

# CRM Integration (optional)
HUBSPOT_API_KEY=
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=
SALESFORCE_INSTANCE_URL=

# Database Configuration (optional)
DATABASE_URL=postgresql://user:password@localhost:5432/phoenix_db

# Web Search (optional)
SEARCH_DOMAINS_WHITELIST=example.com,trusted-source.org
SEARCH_DOMAINS_BLACKLIST=untrusted.com

# Monitoring & Logging
LOG_LEVEL=info
AUDIT_LOG_PATH=./logs/audit.log

# Session Management
SESSION_STORAGE_PATH=./sessions
ENABLE_SESSION_PERSISTENCE=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_TOKENS_PER_HOUR=1000000

# Feature Flags
ENABLE_WEB_SEARCH=true
ENABLE_MCP_SERVERS=true
ENABLE_SUBAGENTS=true
ENABLE_MEMORY_PERSISTENCE=true

# Development
NODE_ENV=development
DEBUG=false